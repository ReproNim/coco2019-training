{
  "builders": [
    {
      "type": "virtualbox-ovf",
      "format": "ova",
      "vm_name": "repronim-training",
      "output_directory": "output",
      "source_path": "ubuntu-xenial-desktop.ova",
      "ssh_timeout": "60m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl poweroff",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "2048"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"]
      ]
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "files/requirements.txt",
      "destination": "~/requirements.txt"
    },
    {
      "type": "file",
      "source": "files/Indiv_Diffs_ReadingSkill.tar",
      "destination": "~/Downloads/Indiv_Diffs_ReadingSkill.tar"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/sleep.sh",
        "scripts/apt.sh",
        "scripts/sleep.sh",
        "scripts/docker.sh",
        "scripts/singularity.sh",
        "scripts/miniconda.sh",
        "scripts/section1.sh",
        "scripts/section2.sh",
        "scripts/section3.sh",
        "scripts/section4.sh",
        "scripts/cleanup.sh"
      ]
    },
    {
      "type": "file",
      "source": "files/neurodocker.sh",
      "destination": "~/images/neurodocker.sh"
    }
  ]
}
